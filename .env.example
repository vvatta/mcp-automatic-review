# Environment configuration for MCP Malware Sandbox

# Anthropic API key (optional, for LLM fuzzing)
ANTHROPIC_API_KEY=your-api-key-here

# Container settings
CONTAINER_RUNTIME=runsc
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=1.0
CONTAINER_TIMEOUT=300

# Network monitoring
ENABLE_NETWORK_MONITORING=true
ALLOW_OUTBOUND_NETWORK=true

# Fuzzing settings
NUM_VALID_PAYLOADS=5
NUM_MALICIOUS_PAYLOADS=10
ENABLE_LLM_FUZZING=false

# Monitoring settings
ENABLE_FILESYSTEM_MONITORING=true
ENABLE_PROCESS_MONITORING=true
ENABLE_SYSCALL_TRACING=true

# Reporting
OUTPUT_FORMAT=json
VERBOSE=true
